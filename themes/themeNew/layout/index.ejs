 <!-- 中间文章 -->
 <div class="centerContent">
    <% site.posts.forEach(function(post){ %>
        <div class="post">
            <div class="post-header">
                <div class="post-title">
                    <a href="<%- config.root %><%- post.path %>">
                        <h1 class="first-title"><%- post.title %></h1>
                    </a>
                </div>
                <div class="post-date subtitle">
                    <i class="fas fa-clock"></i>
                    <span>上传:<%- date(post.date, "YYYY-MM-DD") %></span>
                    <span>更新:<%- date(post.updated, "YYYY-MM-DD") %></span>
                </div>
            </div>
            <div class="post-intro text-font">
                <p>
                    <%- post.excerpt %>
                </p>
            </div>
        </div>
    <% }); %>

</div>
<!-- 中间文章结束 -->